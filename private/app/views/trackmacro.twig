{% macro display_track(track) %}

<a href="/t/{{track.id}}" style="width:100%; display:inline-block; margin: 10px 0;">
	<h4>{{track.name}}</h4>
	<div class="sound" style="margin-top:-10px">
		<div class="play" data-player="{{track.get_player_data()|json_encode}}"></div>
		<img src="img/sound.svg" style="vertical-align:center">
	</div>
	<div class="soundinfo" style="margin-top:-30px">
		<a href="" class="btn btn-primary" style="float:right">JAM</a>
		<span class="glyphicon glyphicon-heart"></span> 12 &nbsp;&nbsp;
		<span class="glyphicon glyphicon-comment"></span> 12 &nbsp;&nbsp;
		<span class="glyphicon glyphicon-plus"></span>12 &nbsp;&nbsp;
		by

		{% for parent in track.parents %}
		<a href="/u/{{user.id}}" class="mockup-avt-xs" style="background-image: url({{parent.user().first().gravatar()}}); background-size: contain;"></a>
		{% endfor %}
		<a href="/u/{{user.id}}" class="mockup-avt-xs" style="background-image: url({{track.user().first().gravatar()}}); background-size: contain;"></a>
	</div>
</a>
{% endmacro %}