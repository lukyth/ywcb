{% macro display_track(track) %}

<div style="width:100%; display:inline-block; margin: 10px 0;">
	<h4><a href="/t/{{track.id}}">{{track.name}}</a></h4>
	<div class="sound" style="margin-top:-10px; white-space:nowrap">
		<div class="pc10 pc20-xs txt-center" style="vertical-align:middle;">
			<div data-player="{{track.get_player_data()|json_encode}}"></div>
		</div>
		<div class="pc90 pc80-xs" style="vertical-align:middle; padding-left:15px;">
			<img src="/img/sound.svg" class="img-responsive" style="width:100%">
		</div>
	</div>
	<div class="soundinfo">
		<a href="/t/{{track.id}}/jam" class="btn btn-secondary" style="float:right">JAM</a>
		<span class="glyphicon glyphicon-heart"></span> 12 &nbsp;&nbsp;
		<span class="glyphicon glyphicon-comment"></span> 12 &nbsp;&nbsp;
		<span class="glyphicon glyphicon-plus"></span>12 &nbsp;&nbsp;
		<br class="visible-xs">
		<br class="visible-xs">
		by
		<a href="/u/{{track.user}}" class="mockup-avt-xs" style="background-image: url({{track.user().first().gravatar()}}); background-size: contain;"></a>
		{% for parent in track.parents|slice(0, 1) %}
		<a href="/u/{{parent.user}}" class="mockup-avt-xs" style="background-image: url({{parent.user().first().gravatar()}}); background-size: contain;"></a>
		{% endfor %}
	</div>
	<br class="visible-xs">
</div>
{% endmacro %}